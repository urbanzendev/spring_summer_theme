<div class="newsletter {% if newsletter == 'center' %}center{% endif %}">
  {% if settings.mailchimp_link != blank %}
    <form name="mc-embedded-subscribe-form" class="contact-form" >
	  <input style="display: none;" checked="checked" type="checkbox" value="32" name="group[4173][32]" id="mce-group[4173]-4173-0"/>
    	<p class="msgPopup"></p>
      <input  id="emailInput" type="email" value="" name="EMAIL" class="contact_email" placeholder="{{ 'general.newsletter_form.placeholder' | t }}">
	    
      <button type="submit" class="cta-button sign_up" >Sign Up</button>
    </form>
  {% else %}    
    {% form 'customer' %}
       {% if form.posted_successfully? %}
         <p><em>{{ 'general.newsletter_form.success_text' | t }}</em></p>
       {% elsif form.errors %}
         {% for field in form.errors %}
           <p><em>{{ field }} - {{ form.errors.messages[field] }}</em></p>
         {% endfor %}
       {% endif %}

       <input type="hidden" name="contact[tags]" value="prospect,newsletter"/>
       <input type="hidden" name="contact[first_name]" value="{{ 'general.newsletter_form.subscriber_first_name' | t }}" />
       <input type="hidden" name="contact[last_name]" value="{{ 'general.newsletter_form.subscriber_last_name' | t }}" />
       <input type="email" class="contact_email" name="contact[email]" required pattern="[^@]+@[^@]+\.[a-zA-Z]{2,6}" placeholder="{{ 'general.newsletter_form.placeholder' | t }}" />
       <input type='submit' class="cta-button" value="{{ 'general.newsletter_form.submit' | t }}" />
     {% endform %}
  {% endif %}
</div>